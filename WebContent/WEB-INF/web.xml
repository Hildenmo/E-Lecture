<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <!-- Give each servlet a name -->
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>server.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>